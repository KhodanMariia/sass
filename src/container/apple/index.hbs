<div class='page'>
  {{#with header}}
    <div class='header'>
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/svg/apple.svg'
            alt='Apple'
            class='header__icon'
          />

          <nav class='header__block'>
            {{#each links}}
              <a href='{{url}}' class='header__link'>
                {{text}}
              </a>
            {{/each}}
          </nav>
        </div>
        <div class='header__block'>
          <img
            src='/svg/search.svg'
            alt='Search'
            class='header__icon'
          />

          <img
            src='/svg/profile.svg'
            alt='Profile'
            class='header__icon'
          />
        </div>
      </header>
    </div>
    <div class='header-second'>
      <div class='header__content ad'>
        {{#with ad}}
          <p class='header__block'>{{title}}</p>
          <div class='header__block ad__block'>
            {{#with link}}
              <a href='{{url}}' class='ad__link'>
                {{text}}
              </a>
              <img
                src='/svg/arrowAd.svg'
                alt='Arrow'
                class='header__icon'
              />
            {{/with}}
          </div>
        {{/with}}
      </div>
    </div>
  {{/with}}

  {{#with iphone_pro}}
